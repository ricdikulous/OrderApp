<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="oval"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="#FF8470FF" />
            <stroke
                android:width="3dp"
                android:color="#FFFFFFFF" />
            <padding
                android:left="@dimen/add_minus_button_padding"
                android:top="@dimen/add_minus_button_padding"
                android:right="@dimen/add_minus_button_padding"
                android:bottom="@dimen/add_minus_button_padding" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <solid android:color="#FF8470FF" />

            <padding
                android:left="@dimen/add_minus_button_padding"
                android:top="@dimen/add_minus_button_padding"
                android:right="@dimen/add_minus_button_padding"
                android:bottom="@dimen/add_minus_button_padding" />
        </shape>
    </item>
</selector>